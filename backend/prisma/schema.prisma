// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Article {
  id              Int      @id @default(autoincrement())
  slug            String   @unique
  
  // Source originale
  sourceUrl       String   @unique
  sourceTitle     String
  sourcePublished DateTime

  // Contenu réécrit en français
  titleFr         String
  summaryFr       String
  contentFr       String
  metaDescFr      String
  tags            String   // JSON string : ["aviation", "compagnies aériennes"]

  // Image
  imageUrl        String?

  // Statut
  status          String   @default("draft") // draft | published
  publishedAt     DateTime?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
